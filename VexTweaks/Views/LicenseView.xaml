<UserControl x:Class="VexTweaks.Views.LicenseView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800"
             Background="{StaticResource BackgroundDarkBrush}">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="32">
            <TextBlock Text="License" Style="{StaticResource HeadingLarge}"/>
            
            <!-- Current License Status -->
            <Border Style="{StaticResource Card}">
                <StackPanel>
                    <TextBlock Text="Current License" Style="{StaticResource HeadingMedium}"/>
                    
                    <Grid Margin="0,16,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" 
                                 Text="Tier:" 
                                 Style="{StaticResource SecondaryText}" 
                                 Margin="0,0,16,8"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" 
                                 Text="{Binding CurrentLicense.Tier}" 
                                 Style="{StaticResource BodyText}" 
                                 Margin="0,0,0,8"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" 
                                 Text="Status:" 
                                 Style="{StaticResource SecondaryText}" 
                                 Margin="0,0,16,8"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" 
                                 Text="{Binding CurrentLicense.IsValid, Converter={StaticResource ValidStatusConverter}}" 
                                 Style="{StaticResource BodyText}" 
                                 Margin="0,0,0,8"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" 
                                 Text="Hardware ID:" 
                                 Style="{StaticResource SecondaryText}" 
                                 Margin="0,0,16,0"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" 
                                 Text="{Binding CurrentLicense.HardwareId}" 
                                 Style="{StaticResource SecondaryText}"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Activate License -->
            <Border Style="{StaticResource Card}">
                <StackPanel>
                    <TextBlock Text="Activate Pro License" Style="{StaticResource HeadingMedium}"/>
                    
                    <TextBlock Text="License Key" 
                             Style="{StaticResource BodyText}" 
                             Margin="0,16,0,8"/>
                    <TextBox Text="{Binding LicenseKey, UpdateSourceTrigger=PropertyChanged}" 
                           Style="{StaticResource ModernTextBox}"
                           MaxLength="19"/>
                    
                    <TextBlock Text="Email" 
                             Style="{StaticResource BodyText}" 
                             Margin="0,16,0,8"/>
                    <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" 
                           Style="{StaticResource ModernTextBox}"/>
                    
                    <TextBlock Text="{Binding StatusMessage}" 
                             Style="{StaticResource BodyText}" 
                             Margin="0,16,0,0"
                             Foreground="{StaticResource AccentBrush}"/>
                    
                    <StackPanel Orientation="Horizontal" Margin="0,16,0,0">
                        <Button Content="Activate License" 
                              Command="{Binding ActivateLicenseCommand}"
                              Style="{StaticResource ModernButton}"
                              IsEnabled="{Binding IsActivating, Converter={StaticResource InverseBoolConverter}}"
                              Margin="0,0,16,0"/>
                        <Button Content="Deactivate" 
                              Command="{Binding DeactivateLicenseCommand}"
                              Style="{StaticResource ModernButton}"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- License Benefits -->
            <Border Style="{StaticResource Card}">
                <StackPanel>
                    <TextBlock Text="Pro License Benefits" Style="{StaticResource HeadingMedium}"/>
                    
                    <StackPanel Margin="0,16,0,0">
                        <TextBlock Style="{StaticResource BodyText}" Margin="0,0,0,8">
                            <Run Text="✓" Foreground="{StaticResource SuccessBrush}"/>
                            <Run Text=" All advanced tweaks unlocked"/>
                        </TextBlock>
                        <TextBlock Style="{StaticResource BodyText}" Margin="0,0,0,8">
                            <Run Text="✓" Foreground="{StaticResource SuccessBrush}"/>
                            <Run Text=" Network optimization features"/>
                        </TextBlock>
                        <TextBlock Style="{StaticResource BodyText}" Margin="0,0,0,8">
                            <Run Text="✓" Foreground="{StaticResource SuccessBrush}"/>
                            <Run Text=" Custom profile creation"/>
                        </TextBlock>
                        <TextBlock Style="{StaticResource BodyText}" Margin="0,0,0,8">
                            <Run Text="✓" Foreground="{StaticResource SuccessBrush}"/>
                            <Run Text=" Priority support"/>
                        </TextBlock>
                        <TextBlock Style="{StaticResource BodyText}">
                            <Run Text="✓" Foreground="{StaticResource SuccessBrush}"/>
                            <Run Text=" Lifetime updates"/>
                        </TextBlock>
                    </StackPanel>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>

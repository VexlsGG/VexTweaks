<Window x:Class="VexTweaks.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VexTweaks"
        xmlns:views="clr-namespace:VexTweaks.Views"
        mc:Ignorable="d"
        Title="VexTweaks - Professional Windows Optimization" 
        Height="720" 
        Width="1280"
        MinHeight="600"
        MinWidth="900"
        Background="{StaticResource BackgroundDarkBrush}"
        WindowStartupLocation="CenterScreen">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border Grid.Column="0" 
                Background="{StaticResource BackgroundMediumBrush}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="0,0,1,0">
            <StackPanel>
                <!-- Logo/Title -->
                <Border Background="{StaticResource BackgroundLightBrush}" 
                        Padding="20"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="0,0,0,1">
                    <StackPanel>
                        <TextBlock Text="VexTweaks" 
                                 FontSize="24" 
                                 FontWeight="Bold" 
                                 Foreground="{StaticResource AccentBrush}"/>
                        <TextBlock Text="v1.0.0" 
                                 Style="{StaticResource SecondaryText}"
                                 Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Navigation Menu -->
                <StackPanel Margin="0,16,0,0">
                    <Button x:Name="DashboardButton"
                            Content="📊 Dashboard" 
                            Style="{StaticResource NavButton}"
                            Click="NavigationButton_Click"
                            Tag="Dashboard"/>
                    
                    <Button x:Name="PerformanceButton"
                            Content="⚡ Performance" 
                            Style="{StaticResource NavButton}"
                            Click="NavigationButton_Click"
                            Tag="Performance"/>
                    
                    <Button x:Name="GamingButton"
                            Content="🎮 Gaming" 
                            Style="{StaticResource NavButton}"
                            Click="NavigationButton_Click"
                            Tag="Gaming"/>
                    
                    <Button x:Name="NetworkButton"
                            Content="🌐 Network" 
                            Style="{StaticResource NavButton}"
                            Click="NavigationButton_Click"
                            Tag="Network"/>
                    
                    <Button x:Name="PrivacyButton"
                            Content="🔒 Privacy" 
                            Style="{StaticResource NavButton}"
                            Click="NavigationButton_Click"
                            Tag="Privacy"/>
                    
                    <Button x:Name="ServicesButton"
                            Content="⚙️ Services" 
                            Style="{StaticResource NavButton}"
                            Click="NavigationButton_Click"
                            Tag="Services"/>
                    
                    <Button x:Name="StartupButton"
                            Content="🚀 Startup" 
                            Style="{StaticResource NavButton}"
                            Click="NavigationButton_Click"
                            Tag="Startup"/>
                    
                    <Button x:Name="ProfilesButton"
                            Content="📋 Profiles" 
                            Style="{StaticResource NavButton}"
                            Click="NavigationButton_Click"
                            Tag="Profiles"/>
                    
                    <Button x:Name="LicenseButton"
                            Content="🔑 License" 
                            Style="{StaticResource NavButton}"
                            Click="NavigationButton_Click"
                            Tag="License"/>
                    
                    <Button x:Name="SettingsButton"
                            Content="⚙️ Settings" 
                            Style="{StaticResource NavButton}"
                            Click="NavigationButton_Click"
                            Tag="Settings"/>
                </StackPanel>

                <!-- Bottom Info -->
                <Border Background="{StaticResource BackgroundLightBrush}" 
                        Padding="20"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="0,1,0,0"
                        VerticalAlignment="Bottom"
                        Margin="0,16,0,0">
                    <StackPanel>
                        <TextBlock x:Name="LicenseStatusText"
                                 Text="Free Tier" 
                                 Style="{StaticResource SecondaryText}"/>
                        <TextBlock Text="VexlsGG © 2025" 
                                 Style="{StaticResource SecondaryText}"
                                 Margin="0,8,0,0"
                                 FontSize="10"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>

        <!-- Content Area -->
        <ContentControl x:Name="ContentArea" 
                       Grid.Column="1"
                       Content="{Binding CurrentView}"/>
    </Grid>
    
    <Window.Resources>
        <!-- Navigation Button Style -->
        <Style x:Key="NavButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource BackgroundLightBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
</Window>
